<%- include("../partials/header") %>

<%- include("../partials/navbar") %>
<%- include("../partials/message") %>

<main>

<div class="bg-gradient-to-r from-blue-50 via-white to-blue-50 font-sans">
    <div class="max-w-7xl mx-auto p-4">
        <!-- Header -->
        <header class="bg-gradient-to-r from-blue-400 to-purple-500 text-white shadow p-6 rounded-lg mb-6">

            <div class="flex items-center gap-4">

                <img class="w-20 h-20 rounded-full border-4 border-white" src="<%= userProfile.profilePic %>" alt="User Avatar">
                <div>
                    
                    <h1 class="text-2xl font-bold"><%= userProfile.name %></h1>
                    <p class="text-blue-100"><%= userProfile.title %></p>
                    <p class="text-sm text-blue-200"><%= userProfile.bio %></p>
                    <div class="flex gap-4 mt-2">
                        <a href="<%= userProfile.links["twitter"] %>" class="text-white hover:text-blue-100">Twitter</a>
                        <a href="<%= userProfile.links["linkedin"] %>" class="text-white hover:text-blue-100">LinkedIn</a>
                        <a href="<%= userProfile.links["github"] %>" class="text-white hover:text-blue-100">GitHub</a>
                        <a href="<%= userProfile.links["website"] %>" class="text-white hover:text-blue-100">Portfolio</a>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Published Posts -->
            <section class="bg-white shadow p-6 rounded-lg border-t-4 border-blue-400">
                <h2 class="text-xl font-bold mb-4 text-blue-600">Published Posts</h2>
                <ul class="space-y-3">
                    <% posts.forEach(post => { %>
                     <li class="p-3 bg-blue-50 rounded-lg shadow-sm hover:bg-blue-100"><a href="/blog/blog-post/<%= post._id %>"><%= post.title %></a></li>
                    <% }) %>
                </ul>
            </section>

            <!-- Drafted Posts -->
            <section class="bg-white shadow p-6 rounded-lg border-t-4 border-purple-400">
                <h2 class="text-xl font-bold mb-4 text-purple-600">Drafted Posts</h2>
                <ul class="space-y-3">
                    <li class="p-3 bg-purple-50 rounded-lg shadow-sm hover:bg-purple-100">Introduction to GraphQL</li>
                    <li class="p-3 bg-purple-50 rounded-lg shadow-sm hover:bg-purple-100">The basics of React Hooks</li>
                </ul>
            </section>

            <!-- Saved and Liked Posts -->
            <section class="bg-white shadow p-6 rounded-lg border-t-4 border-green-400">
                <div class="mb-6">
                    <h2 class="text-xl font-bold mb-4 text-green-600">Saved Posts</h2>
                    <ul class="space-y-3">
                        <li class="p-3 bg-green-50 rounded-lg shadow-sm hover:bg-green-100">Advanced CSS techniques</li>
                        <li class="p-3 bg-green-50 rounded-lg shadow-sm hover:bg-green-100">Improving web performance</li>
                    </ul>
                </div>
                <div>
                    <h2 class="text-xl font-bold mb-4 text-pink-600">Liked Posts</h2>
                    <ul class="space-y-3">
                        <li class="p-3 bg-pink-50 rounded-lg shadow-sm hover:bg-pink-100">Building accessible web applications</li>
                        <li class="p-3 bg-pink-50 rounded-lg shadow-sm hover:bg-pink-100">Why TypeScript is the future of JavaScript</li>
                    </ul>
                </div>
            </section>
        </main>
    </div>
</div>


</main>

<%- include("../partials/footer") %>
