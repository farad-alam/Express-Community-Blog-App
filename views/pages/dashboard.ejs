<main>

  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md flex flex-col">
      <div class="p-4 border-b">
        <h1 class="text-2xl font-bold text-primary">Dashboard</h1>
      </div>
      <nav class="flex-1 p-4 space-y-4">
        <a href="#" class="flex items-center p-2 text-gray-800 hover:bg-gray-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M3 14h18M5 6h14M5 18h14" />
          </svg>
          Overview
        </a>
        <a href="#" class="flex items-center p-2 text-gray-800 hover:bg-gray-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m-6-8h6m-6-4h6M3 10h18M3 14h18" />
          </svg>
          Reports
        </a>
        <a href="#" class="flex items-center p-2 text-gray-800 hover:bg-gray-100 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 mr-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2m6 2v-2m-6 0v2m0-6v2m6-2v2m-6 0v-2m-6-4h6M9 21v2" />
          </svg>
          Settings
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 bg-gray-50 p-6">
      <!-- Header -->
      <header class="mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Welcome to Your Dashboard</h2>
        <p class="text-gray-600">Here is an overview of your recent activity</p>
      </header>

      <!-- Stats Cards -->
      <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-4 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-800">Total Users</h3>
          <p class="text-4xl font-bold text-primary mt-2">1,234</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-800">Revenue</h3>
          <p class="text-4xl font-bold text-green-500 mt-2">$12,345</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-gray-800">New Signups</h3>
          <p class="text-4xl font-bold text-blue-500 mt-2">567</p>
        </div>
      </section>

      <!-- Recent Activity Table -->
      <section class="mt-8 bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Recent Activity</h3>
        <table class="table-auto w-full border-collapse border border-gray-200">
          <thead>
            <tr class="bg-gray-100">
              <th class="border border-gray-200 p-2 text-left">Name</th>
              <th class="border border-gray-200 p-2 text-left">Activity</th>
              <th class="border border-gray-200 p-2 text-left">Date</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="border border-gray-200 p-2">John Doe</td>
              <td class="border border-gray-200 p-2">Logged in</td>
              <td class="border border-gray-200 p-2">2024-12-15</td>
            </tr>
            <tr>
              <td class="border border-gray-200 p-2">Jane Smith</td>
              <td class="border border-gray-200 p-2">Uploaded a file</td>
              <td class="border border-gray-200 p-2">2024-12-15</td>
            </tr>
          </tbody>
        </table>
      </section>
    </main>
  </div>


</main>

