<%- include("../../partials/header") %> <%- include("../../partials/navbar") %>
<%- include("../../partials/message") %>

<div class="bg-gradient-to-r from-purple-50 via-white to-purple-50 font-sans">
  <div class="max-w-4xl mx-auto p-6">
    <!-- Edit Profile Form -->
    <div class="bg-white shadow-lg rounded-lg p-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Profile</h1>
      <form action="/profile/create-profile" method="POST" class="space-y-6">
        <!-- Name Field -->
        <div>
          <label for="name" class="block text-gray-600 font-medium mb-2"
            >Full Name</label
          >
          <input type="text" id="name" name="name" value="<%= oldInput ?
          oldInput.name : "" %>" placeholder="John Doe" class="w-full p-3 border
          border-gray-300 rounded-lg focus:ring focus:ring-purple-200" required>
        </div>

        <%- include('../../partials/inputError', {"errors": errors, type:
        'name'}) %>

        <!-- Title Field -->
        <div>
          <label for="title" class="block text-gray-600 font-medium mb-2"
            >Professional Title</label
          >
          <input type="text" id="title" name="title" value="<%= oldInput ?
          oldInput.title : "" %>" placeholder="Software Developer" class="w-full
          p-3 border border-gray-300 rounded-lg focus:ring
          focus:ring-purple-200" required>
        </div>
        <%- include('../../partials/inputError', {"errors": errors, type:
        'title'}) %>

        <!-- Bio Field -->
        <div>
          <label for="bio" class="block text-gray-600 font-medium mb-2"
            >Bio</label
          >
          <textarea
            id="bio"
            name="bio"
            rows="4"
            placeholder="Write something about yourself..."
            class="w-full p-3 border border-gray-300 rounded-lg focus:ring focus:ring-purple-200"
            required
          ><%= oldInput ? oldInput.bio : "" %></textarea>
        </div>
                <%- include('../../partials/inputError', {"errors": errors, type:
        'bio'}) %>

        <!-- Social Links Fields -->
        <div>
          <label for="website" class="block text-gray-600 font-medium mb-2"
            >website</label
          >
          <input type="url" id="website" name="website" value="<%= oldInput ?
          oldInput.website : "" %>" placeholder="https://yourname.com/"
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring
          focus:ring-purple-200">
        </div>
                <%- include('../../partials/inputError', {"errors": errors, type:
        'website'}) %>


        <div>
          <label for="twitter" class="block text-gray-600 font-medium mb-2"
            >Twitter</label
          >
          <input type="url" id="twitter" name="twitter" value="<%= oldInput ?
          oldInput.twitter : "" %>" placeholder="https://twitter.com/username"
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring
          focus:ring-purple-200">
        </div>

                <%- include('../../partials/inputError', {"errors": errors, type:
        'twitter'}) %>

        <div>
          <label for="linkedin" class="block text-gray-600 font-medium mb-2"
            >LinkedIn</label
          >
          <input type="url" id="linkedin" name="linkedin" value="<%= oldInput ?
          oldInput.linkedin : "" %>"
          placeholder="https://linkedin.com/in/username" class="w-full p-3
          border border-gray-300 rounded-lg focus:ring focus:ring-purple-200">
        </div>

                <%- include('../../partials/inputError', {"errors": errors, type:
        'linkedin'}) %>

        <div>
          <label for="github" class="block text-gray-600 font-medium mb-2"
            >GitHub</label
          >
          <input type="url" id="github" name="github" value="<%= oldInput ?
          oldInput.github : "" %>" placeholder="https://github.com/username"
          class="w-full p-3 border border-gray-300 rounded-lg focus:ring
          focus:ring-purple-200">
        </div>

                <%- include('../../partials/inputError', {"errors": errors, type:
        'github'}) %>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            class="w-full bg-purple-600 text-white p-3 rounded-lg shadow hover:bg-purple-700 focus:ring focus:ring-purple-300"
          >
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../../partials/footer") %>
