<%- include("../../partials/header") %> <%- include("../../partials/navbar") %>
<%- include("../../partials/message") %>

<div class="bg-gray-100">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <h1 class="text-3xl font-bold text-gray-800">Create a New Blog Post</h1>
    <form action="/blog/create" method="POST" class="mt-6 space-y-6" enctype="multipart/form-data">
      <!-- Title -->
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700"
          >Title</label
        >
        <input
          type="text"
          id="title"
          name="title"
          class="mt-1 block w-full rounded-lg border-gray-300 shadow-md focus:ring-blue-500 focus:border-blue-500 sm:text-base p-3"
          placeholder="Enter the blog title"
          required
          value="<%= values ? values.title : "" %>"
        />
      </div>

      <%- include('../../partials/inputError', {"errors": errors, type:
      'title'}) %>

      <!-- Thumbnail -->
      <div>
        <label for="thumbnail" class="block text-sm font-medium text-gray-700"
          >Thumbnail URL</label
        >
        <input
          type="file"
          id="thumbnail"
          name="post-thumbnail"
          accept="image/"
          class="file-input file-input-bordered w-full max-w-xs"
          placeholder="https://example.com/image.jpg"
        />
        
      </div>

      

      <!-- Body -->
      <div>
        <label for="text-body" class="block text-sm font-medium text-gray-700"
          >Body</label
        >
        <textarea
          id="text-body"
          name="body"
          rows="8"
          class="mt-1 block w-full rounded-lg border-gray-300 shadow-md focus:ring-blue-500 focus:border-blue-500 sm:text-base p-3"
          placeholder="Write your blog content here..."
          required
        ><%= values ? values.body : "" %></textarea>
      </div>
      <%- include('../../partials/inputError', {"errors": errors, type: 'body'})
      %>

      <!-- Tags -->
      <div>
        <label for="tags" class="block text-sm font-medium text-gray-700"
          >Tags (comma-separated)</label
        >
        <input
          type="text"
          id="tags"
          name="tags"
          required
          class="mt-1 block w-full rounded-lg border-gray-300 shadow-md focus:ring-blue-500 focus:border-blue-500 sm:text-base p-3"
          placeholder="e.g., JavaScript, Web Development, TailwindCSS"
          value="<%= values ? values.tags : "" %>"
        />
      </div>
      <%- include('../../partials/inputError', {"errors": errors, type: 'tags'})
      %>

      <!-- Read Time -->

      <!-- Submit Buttons -->
      <div class="flex space-x-4">
        <input
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg shadow hover:bg-blue-700"
          value="Publish Blog Post"
        >
      </div>
    </form>
  </div>
</div>

<%- include("../../partials/footer",
{pageSpecificScript:"https://cdn.tiny.cloud/1/4t1coa1jnk3aacfxpdlxhenow8shxk2m89gvbqy0ipo7tdc9/tinymce/7/tinymce.min.js"})
%>
